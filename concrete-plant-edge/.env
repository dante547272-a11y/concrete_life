# 边缘节点配置
NODE_ENV=development
PORT=3000

# 站点信息
SITE_ID=1
SITE_NAME=杭州总站
SITE_CODE=HZ001

# 本地数据库
DATABASE_URL="file:./edge.db"

# 中央服务器配置
CENTRAL_SERVER_URL=http://localhost:3001
CENTRAL_WS_URL=ws://localhost:3001
API_KEY=edge-node-secret-key

# PLC通信配置
# Modbus TCP配置
MODBUS_HOST=192.168.1.100
MODBUS_PORT=502
MODBUS_UNIT_ID=1

# OPC-UA配置
OPCUA_ENDPOINT=opc.tcp://192.168.1.101:4840
OPCUA_USERNAME=
OPCUA_PASSWORD=

# Ethernet/IP配置
ETHERNET_IP_HOST=192.168.1.102
ETHERNET_IP_SLOT=0

# 串口配置（Modbus RTU）
SERIAL_PORT=/dev/ttyUSB0
SERIAL_BAUDRATE=9600
SERIAL_PARITY=none
SERIAL_DATABITS=8
SERIAL_STOPBITS=1

# 数据采集配置
REALTIME_INTERVAL=1000    # 实时数据采集间隔（毫秒）
STATS_INTERVAL=60000      # 统计数据采集间隔（毫秒）
SYNC_INTERVAL=5000        # 数据同步间隔（毫秒）

# 缓存配置
MAX_CACHE_SIZE=10000      # 最大缓存数据条数
OFFLINE_CACHE_DAYS=7      # 离线数据保存天数

# 安全配置
EMERGENCY_STOP_PIN=18     # 紧急停机GPIO引脚
SAFETY_CHECK_INTERVAL=1000 # 安全检查间隔（毫秒）

# 日志配置
LOG_LEVEL=debug
LOG_FILE_PATH=./logs/edge.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Web界面配置
WEB_ENABLED=true
WEB_PORT=8080
WEB_USERNAME=admin
WEB_PASSWORD=admin123